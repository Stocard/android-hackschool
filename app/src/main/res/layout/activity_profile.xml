<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="model"
                type="com.stocard.coolchat.ui.profile.ProfileViewModel"/>
    </data>
    <android.support.constraint.motion.MotionLayout
            android:id="@+id/screen"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutDescription="@xml/scene_profile"
            app:showPaths="true"
            app:progress="100">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:backgroundColor="@{model.color}"
                tools:background="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{model.name}"
                android:textSize="26sp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                tools:text="@tools:sample/first_names" />

        <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/profile_pic"
                tools:src="@tools:sample/avatars"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/toolbar"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="@+id/toolbar"
                app:layout_constraintTop_toTopOf="@+id/toolbar"
                android:layout_marginBottom="32dp"/>


        <android.support.v4.widget.NestedScrollView
                android:id="@+id/content_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                        android:id="@+id/name_input_layout"
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:hint="@string/name"
                        android:layout_height="wrap_content">
                    <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="@={model.name}"
                            android:id="@+id/name_input"
                            android:layout_height="wrap_content"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.v7.widget.AppCompatButton
                        android:text="@string/save_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/save_name_button"
                        android:onClick="@{() -> model.save()}"
                        android:layout_marginTop="8dp"/>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.motion.MotionLayout>
</layout>